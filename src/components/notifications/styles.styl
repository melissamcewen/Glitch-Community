@import '../constants.styl'

.container
  z-index: 11
  top: 20
  right: 20
  position: fixed
  width: 100%
  max-width: 260px
  
.notification
  
  color: primary-background
  font-size: 12px
  font-weight: 600
  padding: 5px 8px
  border-radius: 5px
  max-width: 260px

  margin-bottom: 5px
  line-height: 16px
  p
    margin: 0
  hr
    opacity: 0.5
    height: 1px
    border: 0
    background-color: primary-background
  .loader
    width: 20px
    height: 19px
    margin: 0
    margin-right: 5px
  &:hover
    animation-name: none
  
  .notifyPersistent
    animation: none
  
  .notifySuccess
    background-color: success

.info
  background-color: notification
    
.error
  background-color: error

.success
  background-color: success

.notifyUploading
  assets-file-icon-active()
  background-repeat: no-repeat
  background-position: 8px 5px
  padding-left: 28px

.button-in-notification-container
  pointer-events: auto
  overflow: auto
  margin-top: 5px
  margin-bottom: 2px
  :last-child
    margin-right: 0
  .button-in-notification
    height: 27px
    vertical-align: middle
    margin-right: 5px


// TODO: put in animations container
.hideMe
  animation-name: hideme
  animation-delay: 2.5s
  animation-duration: 0.1s
  animation-iteration-count: 1
  animation-direction: forward
  animation-fill-mode: forwards
  animation-timing-function: ease-out
    
@keyframes hideme
  0%
    opacity: 1
  100%
    opacity: 0

.inline-notification
  position: absolute
  width: max-content
  left: 2px
  top: 25px