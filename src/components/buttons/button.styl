@require '../constants'

.btn
  background-color: white
  border: solid primary 2px
  border-radius: 5px
  color: primary
  cursor: pointer
  display: inline-block
  font-family: sansserif
  font-size: 14px
  font-weight: 600
  line-height: 14px
  padding: 6px 12px
  padding-bottom: 5px
  position: relative
  text-align: left
  text-decoration: none
  &.hasEmoji
    padding-top: 5px;
    padding-bottom: 5px;
  
  &.dangerZone
    &:hover
      background-color: warning-background
  &:hover
    background-color: secondary-background
    text-decoration: none
  &:active,
  &.active
    background-color: secondary-background-active
    color: primary

  &[disabled]
    opacity: .5
    pointer-events: none
    color: primary 
    
  &.cta
    color: primary
    background-color: cta
    box-shadow: 4px 4px 0 primary
    margin-bottom: 2px
    &:hover
      background-color: cta
      box-shadow: 2px 2px 0 primary
    &:active
      background-color: cta
      box-shadow: none
      
  &.small
    font-size: 12px
    padding: 5px 8px 3px
    margin-bottom: 10px
    &.hasEmoji
      padding-top: 3px;
      padding-bottom: 3px;

  &.tertiary
    color: tertiary
    border-width: 1px
    border-color: secondary
    &:hover
      color: primary
      background-color: primary-background
      border-color: line-on-secondary-background
      
  &.matchBackground
    color: inherit
    background-color: inherit
  
  &.unstyled:hover
    opacity: 1;
    background-color: #eaeaea;
    border-radius: 5px;
    border: none;

.transparentButton
  cursor: pointer
  display: block
  text-align: inherit
  width: 100%
  
button.transparentButton:hover
  background: none
  
.btn.unstyled,
.transparentButton
  padding: 0
  border-radius: 0
  border: none
  background: none
  font-weight: normal
    
// apply hover effects if decorative button is inside a link/button that's being hovered
a:hover .btn.decorative,
button:hover .btn.decorative
  background-color: secondary-background