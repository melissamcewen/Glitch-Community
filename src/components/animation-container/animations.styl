@keyframes slideUp
  to
    transform: translateY(-50px)
    opacity: 0
    
@keyframes slideDown
  to
    transform: translateY(50px)
    opacity: 0
    
@keyframes fadeOut
  to
    opacity: 0
    
.slideUp
  animation: slideUp 0.1s ease-out
  animation-fill-mode: forwards
  
.slideDown
  animation: slideDown 0.1s ease-out
  animation-fill-mode: forwards
  
.fadeOut
  animation: fadeOut 0.1s ease-out
  animation-fill-mode: forwards
    
