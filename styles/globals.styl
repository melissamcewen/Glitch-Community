mediumViewport = 670px
largeViewport = 900px
hugeViewport = 1080px

side-padding = 20px

*
  box-sizing: border-box

body
  font-family: sansserif
  color: primary
  margin: 0

h1
  font-weight: bold
  font-size: 22px

h2
  font-weight: bold
  font-size: 18px
  a
    color: primary

h3
  font-size: 16px

h4
  font-size: 14px
    
p
  line-height: 20px

a, .link
  color: link
  text-decoration: none
  &:hover
    text-decoration: underline

hr
  background-color: section-line
  height: 1px
  border: none

.hidden
  display: none !important

.visible
  display: inherit !important

.centered
  display: flex
  flex-direction: row
  align-items: center
  justify-content: center

button,
input
  font-family: sansserif
  
button
  text-align: left
  font-size: 14px
  line-height: 14px
  font-weight: 600

main,
section
  clear: both

section,
article
  margin-top: 1rem
  margin-bottom: 1rem

section
  margin-top: 2rem

.by-fogcreek
  img
    margin-top: 0.5rem
    margin-bottom: 1rem
  p
    max-width: 500px

.warning
  background-color: warning-background

.avatar
  display: inline-block
  width: 32px
  height: 32px
  border-radius: 5px

.made-in-glitch
  padding-top: 1rem
  border-top: 1px solid section-line

.screen-reader-text
  clip: rect(1px, 1px, 1px, 1px)
  height: 1px
  width: 1px
  overflow: hidden
  position: absolute !important

[data-href]
  cursor: pointer

// styles for index.ejs
// There will always be a little special sauce here, since these styles have to work
// in a no-react environment.
#fallback
  #fallback-img
    padding: calc(20%) 0
    margin: 0 auto
  .error-msg 
    background: secondary-background 
    border: 3px solid black
    border-radius: 10px
    h1, p
      margin: 20px

@media(min-width: 700px)
  #fallback
    main
      width: 700px
      position: absolute
      top: 40%
      left: 50%
      transform: translate(-50%, -40%)
    #fallback-img
      padding: 0
      float: left
      margin-right: 40px
    .error-msg
      float: left
      width: 350px
      margin-top: 65px

