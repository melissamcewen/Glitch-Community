monospace = Menlo, Consolas, Monaco, "Lucida Console", Monospace
sansserif = "Benton Sans", Helvetica, Sans-serif

primary = #222
secondary = #C3C3C3
tertiary = #636363
primary-background = white
secondary-background = #F5F5F5
secondary-background-hover = #EAEAEA
secondary-background-active = #eceff3
secondary-hover-on-color = rgba(255,255,255,0.6)
text-on-secondary-background = tertiary
line-on-secondary-background = #B8B8B8
input-border = #CCC
input-border-focused = #A2D7FF
general-label-background = #FFD1C7
overlay-background = rgba(255, 255, 255, 0.8)
cta = #83ffcd
link = #3652D3
general-link =  #244776
section-line = #E5E5E5
private = #fcf3b0
beta = private
pop-shadow = 0px 2px 5px 0px rgba(0,0,0,0.27), 0px 1px 1px 0px rgba(0,0,0,0.15)
admin = general-label-background

error = #DC352C
error-text = #fff
warning = #FFAABF
warning-background = #ffdadf
notification = #7460E1
success = #05D458

help-tag = #54F8D6

anon-user-sign-up-project-outer = #C454FF
anon-user-sign-up-project-inner = #ff93b9

heart = "https://s3.amazonaws.com/hyperweb-editor-assets/us-east-1%3Ab0bac0a2-1470-4ff8-b72d-acc002ba0a16%2Fheart.svg"
search = "https://cdn.gomix.com/us-east-1%3Acba180f4-ee65-4dfc-8dd5-f143280d3c10%2Fsearch.svg"

smallViewport = 414px
mediumSmallViewport = 592px
mediumViewport = 670px
largeViewport = 900px
hugeViewport = 1080px

side-padding = 20px

*
  box-sizing: border-box

body
  font-family: sansserif
  color: primary
  margin: 0

.content
  padding: 1rem 2rem
  margin-left: auto
  margin-right: auto
  width: 100%
  max-width: 1207px
  @media (max-width: smallViewport)
    padding-left: 20px
    padding-right: 20px

.header-wrap
  margin-top: 16px    

h1
  font-weight: bold
  font-size: 22px

h2
  font-weight: bold
  font-size: 18px
  a
    color: primary

h3
  font-size: 16px

h4
  font-size: 14px
    
p
  line-height: 20px

a, .link
  color: link
  text-decoration: none
  &:hover
    text-decoration: underline

hr
  background-color: section-line
  height: 1px
  border: none

.hidden
  display: none !important

.visible
  display: inherit !important

.general-link
  color: link !important

.centered
  display: flex
  flex-direction: row
  align-items: center
  justify-content: center

button,
input,
textarea
  font-family: sansserif

main,
section
  clear: both

section,
article
  margin-top: 1rem
  margin-bottom: 1rem

section
  margin-top: 2rem

.by-fogcreek
  img
    margin-top: 0.5rem
    margin-bottom: 1rem
  p
    max-width: 500px

.warning
  background-color: warning-background

.legible-background
  background-color: white

.avatar
  display: inline-block
  width: 32px
  height: 32px
  border-radius: 5px

.made-in-glitch
  padding-top: 1rem
  border-top: 1px solid section-line

.screen-reader-text
  clip: rect(1px, 1px, 1px, 1px)
  height: 1px
  width: 1px
  overflow: hidden
  position: absolute !important

[data-href]
  cursor: pointer

.status-badge
  font-weight: 600
  font-size: 12px
  line-height: 14px
  vertical-align: middle
  margin: 0
  .status
    padding-top: 2px
    padding-bottom: 0px
    border-radius: 5px
    padding-left: 5px
    padding-right: 5px
    display: inline-block
  .admin
    margin-top: 2px
    background-color: admin
