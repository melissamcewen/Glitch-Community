.user-avatar
  position: relative
  vertical-align: top
  background-size: cover
  background-repeat: no-repeat
  background-position: center
  border-radius: 50%

.team-avatar
  border-radius: 5px

.recent-projects
  .profile-avatar
    display: inline-block
    width: 18%
    margin: 0
    margin-right: 4%
    @media(max-width: 800px)
      display:none
      
  .user-avatar-container
    .user-avatar
      height: 0
      padding-bottom: 100%
      border-radius: 50%
    
  .project
    &:hover,
    &:active
      button
        background-color: cta
    &:after
      border-bottom-color: section-line

.anon-user-sign-up
  background: #83ffcd
  margin: 5px 0px
  padding: 12px
  border-radius: 5px
  position: relative
  display: flex
  align-items: center
  
  button
    margin-right: 3px
    
  button:hover
    background-color: secondary-background-hover

  @media(max-width: 800px)
    width: 100%
    margin-bottom: 1rem
  
  .sign-in-pop
    left: 0px
    top: 26px
    
.clear-session
  position: absolute
  top: 16px
  right: 16px
  
.recent-projects__projects-wrap
  display: inline-block
  margin: -1rem
  padding: 0
  width: 78%
  vertical-align: top
  @media(max-width: 800px)
    width: 100%
